---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ChatPlayground from '../../components/lab/ChatPlayground';
---

<BaseLayout title="Chat Playground" description="BYOK chat interface with side-by-side model comparison via OpenRouter.">
  <div class="max-w-5xl mx-auto px-6 py-16">
    <header class="mb-8">
      <a href="/lab" class="font-mono text-sm text-text-muted hover:text-neon-cyan transition-colors mb-4 inline-block">&larr; lab</a>
      <h1 class="font-mono text-3xl font-bold text-text-bright glow-green">Chat Playground</h1>
      <p class="text-text-muted mt-2">Chat with any model via OpenRouter. Compare responses side by side. Bring your own key.</p>
    </header>
    <ChatPlayground client:load />
  </div>
</BaseLayout>
