---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PromptBuilder from '../../components/lab/PromptBuilder';
---

<BaseLayout title="Prompt Builder" description="Structured prompt templates for common AI tasks.">
  <div class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-8">
      <a href="/lab" class="font-mono text-sm text-text-muted hover:text-neon-cyan transition-colors mb-4 inline-block">&larr; lab</a>
      <h1 class="font-mono text-3xl font-bold text-text-bright glow-green">&gt;_ Prompt Builder</h1>
      <p class="text-text-muted mt-2">Pick a template, fill in the variables, export the prompt.</p>
    </header>
    <PromptBuilder client:load />
  </div>
</BaseLayout>
